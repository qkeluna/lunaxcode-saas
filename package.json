{
  "name": "lunaxcode-saas",
  "version": "1.0.0",
  "description": "AI-Powered Project Management System for Filipino Web Agencies",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "pages:build": "npx @cloudflare/next-on-pages",
    "preview": "npm run pages:build && wrangler pages dev",
    "deploy": "npm run pages:build && wrangler pages deploy",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push:sqlite",
    "db:studio": "drizzle-kit studio",
    "create-admin": "tsx scripts/create-admin.ts",
    "cf:deploy": "npm run pages:build && wrangler pages deploy",
    "cf:deploy:prod": "npm run pages:build && wrangler pages deploy --env production",
    "d1:migrate:dev": "wrangler d1 execute lunaxcode-dev --file=./migrations/0000_initial_schema.sql --remote",
    "d1:migrate:prod": "wrangler d1 execute lunaxcode-prod --file=./migrations/0000_initial_schema.sql --remote",
    "d1:migrate:local": "wrangler d1 execute lunaxcode-dev --file=./migrations/0000_initial_schema.sql",
    "d1:studio:dev": "wrangler d1 execute lunaxcode-dev --command='SELECT * FROM users LIMIT 10'",
    "d1:studio:prod": "wrangler d1 execute lunaxcode-prod --command='SELECT * FROM users LIMIT 10'",
    "db:seed": "wrangler d1 execute lunaxcode-dev --local --file=./scripts/seed.sql",
    "db:seed:dev": "wrangler d1 execute lunaxcode-dev --remote --file=./scripts/seed.sql",
    "db:seed:prod": "wrangler d1 execute lunaxcode-prod --remote --file=./scripts/seed.sql"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.11.0",
    "@google/generative-ai": "^0.19.0",
    "@hookform/resolvers": "^3.9.0",
    "@opennextjs/cloudflare": "^0.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "axios": "^1.7.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.33.0",
    "lucide-react": "^0.451.0",
    "next": "^15.0.0",
    "next-auth": "^5.0.0-beta.29",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-markdown": "^9.0.1",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@cloudflare/workers-types": "^4.20241004.0",
    "@types/node": "^22.7.7",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.24.2",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.0.0",
    "postcss": "^8.4.47",
    "shadcn": "^3.4.0",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vercel": "^47.0.4",
    "wrangler": "^4.42.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
